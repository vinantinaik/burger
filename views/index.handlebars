<h1>Eat-da-Burger</h1>
<div id="main-div">
  <div class="row">
    <ul>
      {{#each burgers}} {{#unless this.devoured}}
      <li>
        <p>
          {{this.id}}. {{this.burger_name}}

          <button data-burgerid="{{this.id}}" class="devburger">Devour</button>
        </p>
      </li>
      {{/unless}} {{/each}}
    </ul>

  </div>
 

  <div class="row">
    <h2>Which burger do you want to eat</h2>
    <form id="addburger" class="button-size">
      <textarea type="text" name="burger"></textarea>
      <button type="submit" id="btnSubmit" class="btn btn-warning hvr-fade">Eat burger!
          <i class="fas fa-utensils"></i>
      </button>
    </form>
  </div>

   <div class="row">
    <ul>
      {{#each burgers}} {{#if this.devoured}}
      <li>
        <p>
          {{this.id}}. {{this.burger_name}}


        </p>
      </li>
      {{/if}} {{/each}}
    </ul>

  </div>

</div>